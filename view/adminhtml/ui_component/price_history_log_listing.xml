<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">price_history_log_listing.price_history_log_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>price_history_log_columns</spinner>
        <deps>
            <dep>price_history_log_listing.price_history_log_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="price_history_log_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">log_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="MageSuite\LowestPriceLogger\Ui\Component\Listing\PriceHistoryLog\DataProvider" name="price_history_log_listing_data_source">
            <settings>
                <requestFieldName>log_id</requestFieldName>
                <primaryFieldName>log_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="price_history_log_columns">
        <column name="log_date" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Log date</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="price" sortOrder="30" class="MageSuite\LowestPriceLogger\Ui\Component\Listing\Column\Price">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Price</label>
            </settings>
        </column>
        <column name="customer_group_id" sortOrder="40" class="MageSuite\LowestPriceLogger\Ui\Component\Listing\Column\CustomerGroup">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer group</label>
            </settings>
        </column>
        <column name="website_id" sortOrder="50" class="MageSuite\LowestPriceLogger\Ui\Component\Listing\Column\Website">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Website ID</label>
            </settings>
        </column>
        <column name="price_type" sortOrder="60" class="MageSuite\LowestPriceLogger\Ui\Component\Listing\Column\PriceType">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Price type</label>
            </settings>
        </column>
        <column name="was_autogenerated_by_cron" sortOrder="70" class="MageSuite\LowestPriceLogger\Ui\Component\Listing\Column\LogOrigin">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Log origin</label>
            </settings>
        </column>
    </columns>
</listing>
