<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="price_history_log" resource="default" engine="innodb" comment="Price history log">
        <column xsi:type="int" name="log_id" unsigned="true" nullable="false"
                identity="true" comment="ID"/>
        <column xsi:type="int" name="customer_group_id" unsigned="false" nullable="true" identity="false"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Product ID"/>
        <column xsi:type="smallint" name="website_id" unsigned="true" nullable="false" identity="false"
                comment="Website ID"/>
        <column xsi:type="smallint" name="price_type" unsigned="true" nullable="false" identity="false"
                comment="Price type (final, regular)"/>
        <column xsi:type="decimal" name="price" scale="6" precision="20" unsigned="false" nullable="false"
                default="0" comment="Price"/>
        <column xsi:type="date" name="log_date" comment="Log date"/>
        <column xsi:type="boolean" name="was_autogenerated_by_cron" nullable="false" default="0" comment="Was price generated by automatic job"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_PRICES">
            <column name="customer_group_id"/>
            <column name="product_id"/>
            <column name="website_id"/>
            <column name="price"/>
            <column name="log_date"/>
        </constraint>
        <index indexType="btree" referenceId="PRODUCT_ID_INDEX">
            <column name="product_id"/>
        </index>
    </table>
</schema>
